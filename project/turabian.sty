\def\leftcite{(}\def\rightcite{)}

\def\cite{\def\citeauthoryear##1##2##3{\def\@thisauthor{##2}%
             \ifx \@lastauthor \@thisauthor \relax \else##2 \fi ##3}\@icite}
\def\shortcite{\def\citeauthoryear##1##2##3{##3}\@icite}

\def\citeauthor{\def\citeauthoryear##1##2##3{##2}\@nbcite}
%\def\citeyear{\def\citeauthoryear##1##2##3{##3}\@nbcite}
\def\citeyear{\def\citeauthoryear##1##2##3{##3}\@icite}

\def\citeallauthors{\def\citeauthoryear##1##2##3{##1}\@nbcite}

% internal macro for citations with () and with breaks between citations
% used in \cite and \shortcite
\def\@icite{\leavevmode\def\@citeseppen{-1000}%
 \def\@cite##1##2{\leftcite\nobreak\hskip 0in{##1\if@tempswa , ##2\fi}\rightcite}%
 \@ifnextchar [{\@tempswatrue\@citex}{\@tempswafalse\@citex[]}}

% internal macro for citations without [] and with no breaks
% used in \citeauthor and \citeyear
\def\@nbcite{\leavevmode\def\@citeseppen{1000}%
 \def\@cite##1##2{{##1\if@tempswa , ##2\fi}}%
 \@ifnextchar [{\@tempswatrue\@citex}{\@tempswafalse\@citex[]}}


\newcommand{\citesep}{;}

% don't box citations, separate with ; and a space
% also, make the penalty between citations a parameter, 
% it may be a good place to break
\def\@citex[#1]#2{%
  \def\@lastauthor{}\def\@citea{}%
  \@cite{\@for\@citeb:=#2\do
    {\@citea\def\@citea{\citesep \penalty\@citeseppen\ }%
     \if@filesw\immediate\write\@auxout{\string\citation{\@citeb}}\fi
     \@ifundefined{b@\@citeb}{\def\@thisauthor{}{\bf ?}\@warning
       {Citation `\@citeb' on page \thepage \space undefined}}%
     {\csname b@\@citeb\endcsname}\let\@lastauthor\@thisauthor}}{#1}}



 \def\@lbibitem[#1]#2{
  \item \mbox{}\\
    \par \if@filesw 
      { \def\protect##1{\string ##1\space}\immediate
        \write\@auxout{\string\bibcite{#2}{#1}}}\fi\ignorespaces}

%since the whole thesis is in double space, here we need to change
%it back to single space in references...

\renewenvironment{thebibliography}[1]
     {\chapter*{\bibname
        \@mkboth{\MakeUppercase\bibname}{\MakeUppercase\bibname}}%
      \addcontentsline{toc}{chapter}{\protect\hspace{2em}\MakeUppercase\bibname} \vskip -0.35in%
      \begin{singlespace*}%
      \list {}{\leftmargin 0.5in \listparindent -0.3in
        \parsep 0in \itemsep -.2in}      
      \sloppy
      \clubpenalty4000
      \@clubpenalty \clubpenalty
      \widowpenalty4000%
      \sfcode`\.\@m}
    {\end{singlespace*}
       \def\@noitemerr
       {\@latex@warning{Empty `thebibliography' environment}}%
      \endlist}


